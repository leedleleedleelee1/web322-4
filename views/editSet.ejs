<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit LEGO Set</title>
</head>
<body>
    <h1>Edit LEGO Set</h1>
    <form action="/lego/editSet" method="POST">
        <input type="hidden" name="set_num" value="<%= set.set_num %>">
        
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= set.name %>" required><br>
        
        <label for="year">Year:</label>
        <input type="number" id="year" name="year" value="<%= set.year %>" required><br>
        
        <label for="num_parts">Number of Parts:</label>
        <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required><br>
        
        <label for="img_url">Image URL:</label>
        <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" required><br>
        
        <label for="theme_id">Theme:</label>
        <select id="theme_id" name="theme_id" required>
            <% themes.forEach(theme => { %>
                <option value="<%= theme.id %>" <%= theme.id === set.Theme.id ? 'selected' : '' %>><%= theme.name %></option>
            <% }); %>
        </select><br>
        
        <button type="submit">Update Set</button>
    </form>

    <form action="/lego/deleteSet/<%= set.set_num %>" method="GET" style="margin-top: 10px;">
        <button type="submit" style="background-color: red; color: black;">Delete Set</button>
    </form>
</body>
</html>
