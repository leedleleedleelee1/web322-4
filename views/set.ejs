<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <title><%= set.name %> - LEGO Set Details</title>
</head>
<body>
    <%- include('partials/navbar', {page:""}) %>

    <div class="container mx-auto my-8">
        <div class="bg-blue-200 p-4 rounded-lg">
            <h1 class="text-4xl font-semibold mb-4"><%= set.name %></h1>
            <p class="text-lg">Below you will find detailed information about the set: <%= set.name %>.</p>
        </div>
        <div class="bg-white p-4 rounded-lg shadow-md mt-4 flex">
            <img src="<%= set.img_url %>" alt="<%= set.name %>" class="w-1/2 h-auto">
            <div class="ml-4">
                <p><strong>Year:</strong> <%= set.year %></p>
                <p><strong>Theme:</strong> <%= set.Theme.name %></p>
                <p><strong>Number of Parts:</strong> <%= set.num_parts %></p>
                <a href="/lego/editSet/<%= set.set_num %>" class="bg-green-500 hover:bg-green-700 text-black font-bold py-2 px-4 rounded">
                    Edit
                </a>
                <a href="#" onclick="history.back(); return false;" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded ml-2">
                    Go Back
                </a>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            fetch('https://quotable.io/random')
                .then(response => response.json())
                .then(data => {
                    const quoteSection = document.createElement('div');
                    quoteSection.className = 'bg-yellow-200 p-4 rounded-lg shadow-md mt-4';
                    quoteSection.innerHTML = `<p class="text-lg">"${data.content}" - ${data.author}</p>`;
                    document.querySelector('.container').appendChild(quoteSection);
                })
                .catch(error => console.error('Error fetching quote:', error));
        });
    </script>
</body>
</html>
